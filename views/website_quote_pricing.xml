<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="website_quote.pricing_inherit" inherit_id="website_quote.pricing">
            <xpath expr="//table//thead//tr" position="replace">
                <th>Products</th>
                <th>Quantity</th>
                <th class="text-right">Unit Price</th>
                <th class="text-right" groups="sale.group_show_price_subtotal">Amount</th>
                <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                <th/>
            </xpath>
            <xpath expr="//tbody" position="replace">
                    <t t-foreach="page" t-as="layout_category">

                        <t t-if="layout_category_size &gt; 1 or page_size &gt; 1" groups="sale.group_sale_layout">
                            <tr class="active">
                                <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                    <t t-esc="layout_category['name']"/>
                                </td>
                            </tr>
                        </t>

                        <!-- Lines associated -->
                        <t t-foreach="layout_category['lines']" t-as="line">
                            <tr>
                              <td>
                                  <span t-field="line.name"/>
                              </td>
                              <td>
                                  <div id="quote_qty">
                                      <span t-field="line.product_uom_qty"/>
                                      <span t-field="line.product_uom"/>
                                  </div>
                              </td>
                              <!--
                              <td>
                                  <div t-foreach="line.tax_id" t-as="tax">
                                      <t t-esc="tax.name"/>
                                  </div>
                              </td>
                              <td>
                                  <strong t-if="line.discount" class="text-info">
                                      <t t-esc="((line.discount % 1) and '%s' or '%d') % line.discount"/>% discount
                                  </strong>
                              </td>
                              -->
                              <td class="text-right">
                                    <!--<div t-field="line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: quotation.pricelist_id.currency_i$
                                    <div>
                                        <t t-esc="(1-line.discount / 100.0) * line.price_unit" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: quotation$
                                    </div>
                              </td>
                              <td class="text-right" groups="sale.group_show_price_subtotal">
                                  <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: quotation.pricelist_id.currency_id$
                              </td>
                              <td class="text-right" groups="sale.group_show_price_total">
                                  <span t-field="line.price_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: quotation.pricelist_id.currency_id}"/>
                              </td>
                              <td class="text-center">
                                  <a t-attf-href="./update_line/#{ line.id }/?order_id=#{ quotation.id }&amp;unlink=True&amp;token=#{ quotation.access_token }" class="mb8 js_update_line_js$
                                      <span class="fa fa-trash-o"/>
                                  </a>
                              </td>
                          </tr>
                        </t>
                        <t t-if="(layout_category_size &gt; 1  or page_size &gt; 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                            <tr>
                                <td/><td/>
                                <td class="text-right" style="padding-bottom: 32px"><strong>Subtotal:</strong></td>
                                <td class="text-right" style="padding-bottom: 32px">
                                    <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                    <strong data-id="total_amount" t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': quotation.pricelist_id.currency_id}"/>
                                </td>
                                <td/>
                            </tr>
                        </t>
                    </t>
                    <t t-if="page_index == page_size - 1">
                        <t t-if="any([line.tax_id for line in quotation.order_line])">
                            <tr>
                                <td/><td/>
                                <td class="text-right"><strong>Subtotal:</strong></td>
                                <td class="text-right">
                                    <strong data-id="total_amount" t-field="quotation.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;,&quot;display_currency&quot;: quo$
                                </td>
                                <td/>
                            </tr>
                            <tr>
                                <td/><td/>
                                <td class="text-right">Taxes:</td>
                                <td class="text-right">
                                    <span data-id="total_amount" t-field="quotation.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;,&quot;display_currency&quot;: quotation$
                                </td>
                                <td/>
                            </tr>
                        </t>
                        <tr>
                            <td/><td/>
                            <td class="text-right"><strong>Total:</strong></td>
                            <td class="text-right">
                                <strong data-id="total_amount" t-field="quotation.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;,&quot;display_currency&quot;: quotation$
                            </td>
                            <td/>
                        </tr>
                    </t>
            </xpath>
        </template>
    </data>
</odoo>

